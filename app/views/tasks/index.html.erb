<div class="container">
  <h1>To Do <span>-></span></h1>
  <div class="tasks-container">
    <ul>
      <% @tasks.each do |task| %>
      <li>
        <%= form_for task do |f| %>
        <%= f.check_box :status, :onclick => "status"%>
        <% end %>
        <p><%= task.to_do %></p>
        <div class="links">
          <%= link_to "X", task, method: :delete, class: "delete_link", remote: true %>
        </div>
      </li>
      <% end %>
    </ul>
    
    <%= render 'form' %>

  </div>
</div>