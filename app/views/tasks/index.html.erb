<div class="container">
  <h1>To Do <span>-></span></h1>
  <div class="tasks-container">
    <ul>
      <% @tasks.each do |task| %>
      <li>
        <form>
        <%= check_box_tag task.id, task.status, {:checked => "checked"}  %>
      </form>
        <p><%= task.to_do %></p>
        <div class="links">
          <%= link_to "X", task, method: :delete, class: "delete_link", remote: true %>
        </div>
      </li>
      <% end %>
    </ul>
    
    <%= render 'form' %>

  </div>
</div>